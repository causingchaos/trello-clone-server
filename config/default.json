
{
  "host": "localhost",
  "port": 3030,
  "public": "../public/",
  "paginate": {
    "default": 500,
    "max": 1000
  },
  "authentication": {
    "entity": "user",
    "service": "users",
    "secret": "AUTH_SECRET",
    "authStrategies": [
      "jwt",
      "local"
    ],
    "jwtOptions": {
      "header": {
        "typ": "access"
      },
      "audience": "https://board.backpackersdb.com",
      "issuer": "backpackersdb",
      "algorithm": "HS256",
      "expiresIn": "1d"
    },
    "local": {
      "usernameField": "\\username",
      "passwordField": "password"
    }
  },
  "postgres": {
    "client": "pg",
    "connection": "DATABASE_URL"
  }
}

